<div class = "blog_title comments_title"><span class="blog.title">Post</span></div>

<article class="container">
  <div>
    <div class = "blog_title"><span class="blog.title">{{blog.title}}</span><span>{{blog.user.user_name}} {{format_date blog.createdAt}} </span></div>
    <div class = "blog_body">{{blog.post}}</div>
  </div>
</article>

<div class = "blog_title comments_title"><span class="blog.title">Comments</span></div>

{{#each blog.comments}}
<article class="container">
  <div>
    <div class = "blog_body format_comment"><span>{{comment}}</span><span>{{user.user_name}} {{format_date createdAt}} </span></div>
  </div>
</article>
{{/each}}


<div class="blog_title" id="addComment">Add Comment</div>

<div id="toggleComment" style = "display:none">
  <div class="blog_title">
    <label for="commentText" class="form-label">Comment</label>
    <input type="textarea" class="form-control" id="commentText" required>
  </div>
  <div class="blog_body">
    <button type="submit" class="login_button" id="submitComment">Add Comment</button>
  </div>
</div>

 <script src="/js/addComment.js"></script>
